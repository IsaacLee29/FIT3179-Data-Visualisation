{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 500,
  "config": {
    "font": "Roboto",
    "title": {
      "fontSize": 24
    },
    "axis": {
      "labelFont": "Roboto",
      "titleFont": "Roboto",
      "labelFontSize": 12,
      "titleFontSize": 13
    },
    "legend": {
      "labelFont": "Roboto",
      "titleFont": "Roboto",
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/IsaacLee29/FIT3179-Data-Visualisation-2/main/data/world-happiness-report-2021-melted.csv",
    "format": { "type": "csv" }
  },
  "params": [
    {
      "name": "factor_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Log GDP Per Capita",
          "Social Support",
          "Healthy Life Expectancy",
          "Freedom To Make Life Choices",
          "Generosity",
          "Perceptions Of Corruption",
          "Dystopia & Residual"
        ],
        "labels": [
          "Show All",
          "Log GDP Per Capita",
          "Social Support",
          "Healthy Life Expectancy",
          "Freedom To Make Life Choices",
          "Generosity",
          "Perceptions Of Corruption",
          "Dystopia & Residual"
        ],
        "name": "Factors: "
      }
    }
  ],
  "encoding": {
    "x": {
      "aggregate": "sum",
      "field": "Factor_score",
      "title": "Happiness Score",
      "type": "quantitative"
    },
    "y": {
      "field": "Country name",
      "type": "nominal",
      "title": "Country",
      "sort": "-x"
    }
  },
  "transform": [
    {
      "filter": "factor_selection == null || datum.Factors == factor_selection"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar"
      },
      "encoding": {
        "color": {
          "field": "Factors",
          "type": "nominal",
          "scale": {
            "domain": [
              "Log GDP Per Capita",
              "Social Support",
              "Healthy Life Expectancy",
              "Freedom To Make Life Choices",
              "Generosity",
              "Perceptions Of Corruption",
              "Dystopia & Residual"
            ],
            "range": [
              "#AB8FDA",
              "#87C1F5",
              "#80D5BE",
              "#F89D81",
              "#F9C62B",
              "#8CC540",
              "#5993B6"
            ]
          },
          "legend": {
            "orient": "right"
          }
        },
        "tooltip": [
          {
            "field": "Country name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Factors",
            "type": "nominal",
            "title": "Factor"
          },
          {
            "field": "Factor_score",
            "type": "quantitative",
            "title": "Factor Contribution Score"
          }
        ]
      }
    }
  ]
}
