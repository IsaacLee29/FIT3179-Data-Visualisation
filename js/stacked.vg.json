{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 500,
  "config": {
    "title": {
      "fontSize": 24
    },
    "legend": {
      "direction": "horizontal",
      "orient": "top"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/IsaacLee29/FIT3179-Data-Visualisation-2/main/data/world-happiness-report-2021-melted.csv",
    "format": { "type": "csv" }
  },
  "params": [
    {
      "name": "factor_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Explained_by:_Log_GDP_per_capita",
          "Explained_by:_Social_support",
          "Explained_by:_Healthy_life_expectancy",
          "Explained_by:_Freedom_to_make_life_choices",
          "Explained_by:_Generosity",
          "Explained_by:_Perceptions_of_corruption",
          "Dystopia_+_residual"
        ],
        "labels": [
          "Show All",
          "Log GDP per capita",
          "Social support",
          "Healthy life expectancy",
          "Freedom to make life choices",
          "Generosity",
          "Perceptions of corruption",
          "Dystopia & Residual"
        ],
        "name": "Factors: "
      }
    }
  ],
  "encoding": {
    "x": {
      "aggregate": "sum",
      "field": "Factor_score",
      "title": "Happiness Score",
      "type": "quantitative"
    },
    "y": {
      "field": "Country_name",
      "type": "nominal",
      "title": "Country Name",
      "sort": "-x"
    }
  },
  "transform": [
    {"filter": "factor_selection == null || datum.Factors == factor_selection"}
  ],
  "layer": [
    {
      "mark": {
        "type": "bar"
      },
      "encoding": {
        "color": {
          "field": "Factors",
          "type": "nominal",
          "legend": {
            "labelExpr": "datum.label == 'Explained_by:_Log_GDP_per_capita' ? 'Log GDP per capita' : datum.label == 'Explained_by:_Social_support' ? 'Social support': datum.label == 'Explained_by:_Healthy_life_expectancy' ? 'Healthy life expectancy': datum.label == 'Explained_by:_Freedom_to_make_life_choices' ? 'Freedom to make life choices': datum.label == 'Explained_by:_Generosity' ? 'Generosity': datum.label == 'Explained_by:_Perceptions_of_corruption' ? 'Perceptions of corruption': 'Dystopia & Residual'"
          },
          "scale": {
            "domain": [
              "Explained_by:_Log_GDP_per_capita",
              "Explained_by:_Social_support",
              "Explained_by:_Healthy_life_expectancy",
              "Explained_by:_Freedom_to_make_life_choices",
              "Explained_by:_Generosity",
              "Explained_by:_Perceptions_of_corruption",
              "Dystopia_+_residual"
            ],
            "range": [
              "#AB8FDA",
              "#87C1F5",
              "#80D5BE",
              "#F89D81",
              "#F9C62B",
              "#8CC540",
              "#5993B6"
            ]
          }
        },
        "tooltip": [
          {
            "field": "Country_name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Factor_score",
            "type": "quantitative",
            "title": "Factor"
          },
          {
            "field": "Factors",
            "type": "nominal",
            "title": "Factor Contribution Score"
          }
        ]
      }
    }
  ]
}
